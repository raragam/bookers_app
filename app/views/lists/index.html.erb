<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
  </head>

  <body>
  <p id="flash"></p>
  <h1>Books</h1>
  <table>
      <thead>
        <tr>
          <th>Title</th><th>Body</th><th colspan="3"></th>
        </tr>
      </thead>

      <% @lists.each do |list| %>

      <tbody>
        <tr>
      <td>
        <span><%= list.title %></span>
      </td>
      <td>
        <span><%= list.body %></span>
      </td>
      <td>
        <%= link_to "Show", list_path(list.id) %>
      </td>
      <td>
        <%= link_to "Edit", edit_list_path(list.id) %>
      </td>
      <td>
        <%= link_to "Destroy", destroy_list_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
        </tr>
      </tbody>

      <% end %>

   </table>

  <h2>New book</h2>
    <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= @list.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
        </li>
    <% end %>
  </ul>
    </div>
<% end %>

  <%= form_with model: @list, url: '/lists', method: :post do |f| %>

  <form>

  <div class="field">

    <div>
      <label>Title</label>
    </div>

      <div>
        <text><%= f.text_field :title %></text>
      </div>

  </div>

  <div class="field">

    <div>
      <label>Body</label>
    </div>

    <div>
      <text><%= f.text_area :body %></text>
    </div>

  </div>

  <div class="actions">
  <%= f.submit 'Create Book' %>
  </div>

<% end %>

</form>

</body>
</html>

