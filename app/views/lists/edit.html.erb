<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
  </head>

  <body>
  <h1>Editing Book</h1>
  <% if @list.errors.any? %>
  <div id="error_explanation">
    <h2><%= @list.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

  <%= form_with model: @list, url: update_list_path(@list.id), method: :patch do |f| %>

  <form>
    <div class="field">
      <div>
        <label>Title</label>
      </div>
      <div>
        <text><%= f.text_field :title %></text>
     </div>
    </div>

    <div class="field">
      <div>
        <label>Body</label>
      </div>
      <div>
        <text><%= f.text_area :body %></text>
     </div>
    </div>

  <div class="actions">
   <%= f.submit 'Update Book' %>
  </div>

  <% end %>

  </form>

  <a><%= link_to "Show", list_path(@list.id) %></a>
   |
  <a class="back" href=/books>Back</a>
</body>


</html>